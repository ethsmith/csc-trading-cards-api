# Server
PORT=3001
NODE_ENV=development

# Discord OAuth2
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3001/auth/discord/callback

# Frontend URL (for redirects after auth)
FRONTEND_URL=http://localhost:5173

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production

# Admin Discord IDs (comma-separated)
ADMIN_DISCORD_IDS=your_discord_id_here

# Database Configuration
# DB_TYPE options: mysql, postgres, sqlite
DB_TYPE=mysql

# MySQL Configuration (DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=csc_trading_cards

# PostgreSQL Configuration (DB_TYPE=postgres)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=csc_trading_cards

# SQLite Configuration (DB_TYPE=sqlite)
# DB_NAME=./csc_trading_cards.db
# Or use in-memory: DB_NAME=:memory:
